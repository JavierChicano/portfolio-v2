---
import Badge from "./Badge.astro";

export interface Props {
  image: string;
  imageAlt: string;
  title: string;
  description: string;
  link: string;
  // Props opcionales para badges
  badge1Img?: string;
  badge1Nombre?: string;
  badge2Img?: string;
  badge2Nombre?: string;
  badge3Img?: string;
  badge3Nombre?: string;
  numberExtra?: number;
}

const {
  image,
  imageAlt,
  title,
  description,
  link,
  badge1Img,
  badge1Nombre,
  badge2Img,
  badge2Nombre,
  badge3Img,
  badge3Nombre,
  numberExtra,
} = Astro.props;
---

<a 
  href={link} 
  class="flex flex-col rounded-xl bg-background-gray transition-all duration-300 hover:ring-2 hover:ring-blue-500 hover:ring-offset-2 hover:ring-offset-black cursor-pointer group"
>
  <img
    src={image}
    alt={imageAlt}
    class="w-full h-full object-cover border-gray border rounded-xl group-hover:brightness-110 transition-all duration-300"
  />
  <div class="flex flex-col text-start p-4 rounded-b-xl gap-2">
    <h2 class="text-2xl font-semibold group-hover:text-primary-blue transition-colors duration-300">{title}</h2>
    <p class="text-gray-500 text-sm max-w-xl">{description}</p>

    <!-- Contenedor de badges -->
    <div class="flex flex-wrap gap-2 mt-2">
      {
        badge1Img && badge1Nombre && (
          <Badge image={badge1Img} title={badge1Nombre} />
        )
      }
      {
        badge2Img && badge2Nombre && (
          <Badge image={badge2Img} title={badge2Nombre} />
        )
      }
      {
        badge3Img && badge3Nombre && (
          <Badge image={badge3Img} title={badge3Nombre} />
        )
      }
      {numberExtra && <span class="text-sm flex gap-2 items-center bg-background-gray p-2 rounded-xl w-fit text-gray-500">+{numberExtra}</span>}
    </div>
  </div>
</a>
