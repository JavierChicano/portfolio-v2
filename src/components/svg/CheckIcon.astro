---
export interface Props {
  size?: number;
  color?: string;
  strokeWidth?: number;
  class?: string;
  id?: string;
}

const {
  size = 20,
  color = "currentColor",
  strokeWidth = 2,
  class: className = "",
  id,
} = Astro.props;
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  width={size}
  height={size}
  viewBox="0 0 24 24"
  fill="none"
  stroke={color}
  stroke-width={strokeWidth}
  stroke-linecap="round"
  stroke-linejoin="round"
  class={`icon icon-tabler ${className}`}
  id={id}
  ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
    d="M5 12l5 5l10 -10"></path></svg
>
