---
export interface Props {
  image: string;
  imageAlt: string;
  title: string;
  empresa: string;
  description: string;
  date: string;
}

const { image, imageAlt, title, empresa, description, date } = Astro.props;
---

<article class="flex gap-4 items-center justify-between">
  <div class="flex items-center gap-4">
    <img
      src={image}
      alt={imageAlt}
      class="w-12 h-12 object-cover border-gray border rounded-lg"
    />
    <div>
      <h2 class="text-lg sm:text-xl">{title}</h2>
      <p class="text-base text-gray-500 items-start h-full text-nowrap sm:hidden">
        {date}
      </p>
      <p class="text-primary-blue text-sm">{empresa}</p>
      <p class="text-gray-500 text-sm max-w-xl mt-2">{description}</p>
    </div>
  </div>
  <p class="text-base text-gray-500 items-start h-full text-nowrap hidden sm:block">{date}</p>
</article>
